{{#each albums as |album|}}


 <!-- Developers, why are we using data-id and not just id? -->
<div>
  <u1 data-id="{{album.id}}">
    <li><b><u>Album Title:</b></u> {{album.title}}</li>
    <li>{{#if album.artist_name}}
      <b><u>Artist:</b></u> {{album.artist_name}}
    {{else}}
      <b>Artist:</b> No Description.
    {{/if}}</li>
    <li>{{#if album.year_released}}
      <b><u>Year Released:</b></u> {{album.year_released}}
    {{else}}
      <b><u>Year Released:</b></u> No Description.
    {{/if}}</li>
    <li>{{#if album.format}}
      <b><u>Format:</b></u> {{album.format}}
    {{else}}
      <b><u>Format:</b></u> No Description.
    {{/if}}</li>
    <li>{{#if album.catalog_number}}
      <b><u>Catalog Number:</b></u> {{album.catalog_number}}
    {{else}}
      <b><u>Catalog Number:</b></u> No Description.
    {{/if}}</li>
    <li><button class="edit">Edit</button>   <button class="delete">Delete</button></li>
    <br>
  </ul>
 </div>

{{/each}}
